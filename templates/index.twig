{% extends "base.twig" %}

{% block content %}
	<div class="rounded-t-xl overflow-hidden bg-gradient-to-r from-rose-50 to-rose-100 p-10">
		<div class="space-y-6">
			<div class="flex rounded-md overflow-hidden text-white font-mono">
				<div class="w-1/2 px-sm py-md bg-red text-center">w-1/2</div>
				<div class="w-1/2 px-sm py-md bg-gray text-center">w-1/2</div>
			</div>
			<div class="flex rounded-md overflow-hidden text-white font-mono">
				<div class="w-2/5 px-2 py-4 bg-red text-center">w-2/5</div>
				<div class="w-3/5 px-2 py-4 bg-gray text-center">w-3/5</div>
			</div>
			<div class="flex rounded-md overflow-hidden text-white font-mono">
				<div class="w-1/3 px-2 py-4 bg-red text-center">w-1/3</div>
				<div class="w-2/3 px-2 py-4 bg-gray text-center">w-2/3</div>
			</div>
			<div class="flex rounded-md overflow-hidden text-white font-mono">
				<div class="w-1/4 px-2 py-4 bg-red text-center">w-1/4</div>
				<div class="w-3/4 px-2 py-4 bg-gray text-center">w-3/4</div>
			</div>
			<div class="flex rounded-md overflow-hidden text-white font-mono">
				<div class="w-1/5 px-2 py-4 bg-red text-center">w-1/5</div>
				<div class="w-4/5 px-2 py-4 bg-gray text-center">w-4/5</div>
			</div>
			<div class="flex rounded-md overflow-hidden text-white font-mono">
				<div class="w-1/6 px-2 py-4 bg-red text-center">w-1/6</div>
				<div class="w-5/6 px-2 py-4 bg-gray text-center">w-5/6</div>
			</div>
			<div class="rounded-md w-full px-2 py-4 bg-red text-center text-white font-mono">w-full</div>
		</div>
	</div>


	<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 xl:grid-cols-8 gap-4">
		<div class="bg-fuchsia-500 h-12 rounded-md flex items-center justify-center text-white text-2xl font-extrabold">1</div>
		<div class="bg-fuchsia-500 h-12 rounded-md flex items-center justify-center text-white text-2xl font-extrabold">2</div>
		<div class="bg-fuchsia-500 h-12 rounded-md flex items-center justify-center text-white text-2xl font-extrabold">3</div>
		<div class="bg-fuchsia-500 h-12 rounded-md flex items-center justify-center text-white text-2xl font-extrabold">4</div>
		<div class="bg-fuchsia-500 h-12 rounded-md flex items-center justify-center text-white text-2xl font-extrabold">5</div>
		<div class="bg-fuchsia-500 h-12 rounded-md flex items-center justify-center text-white text-2xl font-extrabold">6</div>
		<div class="bg-fuchsia-500 h-12 rounded-md flex items-center justify-center text-white text-2xl font-extrabold">7</div>
		<div class="bg-fuchsia-500 h-12 rounded-md flex items-center justify-center text-white text-2xl font-extrabold">8</div>
		<div class="bg-fuchsia-500 h-12 rounded-md flex items-center justify-center text-white text-2xl font-extrabold">9</div>
	</div>
	<h2>{{ foo }}</h2>
	<p>{{ qux }}</p>
	{% for post in posts %}
		{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
	{% endfor %}
	
	{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
{% endblock %}
